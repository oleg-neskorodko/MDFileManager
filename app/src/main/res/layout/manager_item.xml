<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/opaque00"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/pictureImageView"
        android:layout_alignParentLeft="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:tint="@color/colorIcon2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/nameTextView"
            style="@style/MainText"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/itemCheckBox"
            android:text="text" />

        <RelativeLayout
            android:id="@+id/dateTimeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/nameTextView"
            android:layout_toLeftOf="@+id/itemCheckBox">

            <TextView
                android:id="@+id/discSpaceTextView"
                style="@style/SupportingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="space" />

            <TextView
                android:id="@+id/dateTextView"
                style="@style/SupportingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/timeTextView"
                android:paddingLeft="10dp"
                android:text="date" />

            <TextView
                android:id="@+id/timeTextView"
                style="@style/SupportingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="10dp"
                android:text="time" />

        </RelativeLayout>

        <CheckBox
            android:id="@+id/itemCheckBox"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:buttonTint="@color/colorGray3"
            android:text="" />

    </RelativeLayout>

    <View
        android:id="@+id/explorerDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"/>

</LinearLayout>